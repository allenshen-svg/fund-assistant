/* ====== 全局暗色主题 ====== */
page {
  background: #0f0f1a;
  color: #e0e0e0;
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx 24rpx;
  padding-bottom: 120rpx;
}

/* ====== 卡片 ====== */
.card {
  background: linear-gradient(135deg, #1e1e38 0%, #1a1a2e 100%);
  border: 1rpx solid rgba(108,138,255,0.12);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
}

.sub {
  color: #8b8fa3;
  font-size: 24rpx;
}

/* ====== 行布局 ====== */
.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.row-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ====== 标签 ====== */
.chip {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.chip.up, .chip.red {
  background: rgba(239,68,68,0.15);
  color: #f87171;
}

.chip.down, .chip.green {
  background: rgba(34,197,94,0.15);
  color: #4ade80;
}

.chip.flat, .chip.gray {
  background: rgba(139,143,163,0.15);
  color: #8b8fa3;
}

.chip.blue {
  background: rgba(108,138,255,0.15);
  color: #6c8aff;
}

.chip.orange {
  background: rgba(251,146,60,0.15);
  color: #fb923c;
}

/* ====== 按钮 ====== */
.btn {
  background: linear-gradient(135deg, #6c8aff 0%, #5b6abf 100%);
  color: #fff;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  text-align: center;
}

.btn.ghost {
  background: rgba(108,138,255,0.12);
  color: #6c8aff;
}

.btn.sm {
  padding: 10rpx 18rpx;
  font-size: 24rpx;
}

.btn::after {
  border: none;
}

/* ====== 涨跌色 ====== */
.pct-up { color: #f87171; }
.pct-down { color: #4ade80; }
.pct-flat { color: #8b8fa3; }

/* ====== 分割线 ====== */
.divider {
  height: 1rpx;
  background: rgba(108,138,255,0.08);
  margin: 16rpx 0;
}

/* ====== 加载动画 ====== */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #6c8aff;
  animation: pulse 1.2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.3; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1.2); }
}

/* ====== 空状态 ====== */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #8b8fa3;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

/* ====== 输入框 ====== */
.input {
  background: rgba(255,255,255,0.05);
  border: 1rpx solid rgba(108,138,255,0.2);
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
  color: #e0e0e0;
}

.label {
  display: block;
  color: #8b8fa3;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

/* ====== 危险色 ====== */
.danger { color: #f87171; }
