/* ====== 主题变量 ====== */
page {
  /* ── 暗色主题（默认） ── */
  --bg: #0f0f1a;
  --surface: #1e1e38;
  --surface-end: #1a1a2e;
  --surface-alt: #252547;
  --elevated: rgba(255,255,255,0.03);
  --elevated-2: rgba(255,255,255,0.04);
  --elevated-3: rgba(255,255,255,0.05);
  --elevated-4: rgba(255,255,255,0.06);
  --input-bg: rgba(255,255,255,0.05);
  --accent-subtle: rgba(108,138,255,0.06);
  --accent-bg: rgba(108,138,255,0.12);
  --accent-bg-2: rgba(108,138,255,0.08);
  --accent-bg-3: rgba(108,138,255,0.04);
  --border: rgba(108,138,255,0.12);
  --border-subtle: rgba(108,138,255,0.08);
  --border-faint: rgba(108,138,255,0.06);
  --border-accent: rgba(108,138,255,0.2);
  --border-accent-light: rgba(108,138,255,0.1);
  --border-accent-faint: rgba(108,138,255,0.15);
  --text: #e0e0e0;
  --text-strong: #fff;
  --text-sub: #8b8fa3;
  --text-body: #b0b4c8;
  --text-medium: #c8cce0;
  --text-label: #c0c0c0;
  --text-muted: #888;
  --text-dim: #666;
  --text-faint: #64748b;
  --accent: #6c8aff;
  --card-shadow: none;

  background: var(--bg);
  color: var(--text);
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', sans-serif;
}

/* ── 亮色主题 ── */
@media (prefers-color-scheme: light) {
  page {
    --bg: #f5f6fa;
    --surface: #ffffff;
    --surface-end: #f8f9fc;
    --surface-alt: #f0f2f8;
    --elevated: rgba(0,0,0,0.02);
    --elevated-2: rgba(0,0,0,0.03);
    --elevated-3: rgba(0,0,0,0.04);
    --elevated-4: rgba(0,0,0,0.05);
    --input-bg: rgba(0,0,0,0.04);
    --accent-subtle: rgba(74,108,247,0.06);
    --accent-bg: rgba(74,108,247,0.10);
    --accent-bg-2: rgba(74,108,247,0.07);
    --accent-bg-3: rgba(74,108,247,0.04);
    --border: rgba(0,0,0,0.10);
    --border-subtle: rgba(0,0,0,0.06);
    --border-faint: rgba(0,0,0,0.04);
    --border-accent: rgba(74,108,247,0.20);
    --border-accent-light: rgba(0,0,0,0.08);
    --border-accent-faint: rgba(0,0,0,0.06);
    --text: #333333;
    --text-strong: #1a1a2e;
    --text-sub: #666666;
    --text-body: #555555;
    --text-medium: #444444;
    --text-label: #555555;
    --text-muted: #888888;
    --text-dim: #999999;
    --text-faint: #aaaaaa;
    --accent: #4a6cf7;
    --card-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  }
}

.container {
  padding: 20rpx 24rpx;
  padding-bottom: 120rpx;
}

/* ====== 卡片 ====== */
.card {
  background: linear-gradient(135deg, var(--surface) 0%, var(--surface-end) 100%);
  border: 1rpx solid var(--border);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--card-shadow);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-strong);
}

.sub {
  color: var(--text-sub);
  font-size: 24rpx;
}

/* ====== 行布局 ====== */
.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.row-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ====== 标签 ====== */
.chip {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.chip.up, .chip.red {
  background: rgba(239,68,68,0.15);
  color: #f87171;
}

.chip.down, .chip.green {
  background: rgba(34,197,94,0.15);
  color: #4ade80;
}

.chip.flat, .chip.gray {
  background: rgba(139,143,163,0.15);
  color: var(--text-sub);
}

.chip.blue {
  background: rgba(108,138,255,0.15);
  color: var(--accent);
}

.chip.orange {
  background: rgba(251,146,60,0.15);
  color: #fb923c;
}

/* ====== 按钮 ====== */
.btn {
  background: linear-gradient(135deg, #6c8aff 0%, #5b6abf 100%);
  color: #fff;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  text-align: center;
}

.btn.ghost {
  background: var(--accent-bg);
  color: var(--accent);
}

.btn.sm {
  padding: 10rpx 18rpx;
  font-size: 24rpx;
}

.btn::after {
  border: none;
}

/* ====== 涨跌色 ====== */
.pct-up { color: #f87171; }
.pct-down { color: #4ade80; }
.pct-flat { color: var(--text-sub); }

/* ====== 分割线 ====== */
.divider {
  height: 1rpx;
  background: var(--border-subtle);
  margin: 16rpx 0;
}

/* ====== 加载动画 ====== */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: var(--accent);
  animation: pulse 1.2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.3; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1.2); }
}

/* ====== 空状态 ====== */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: var(--text-sub);
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

/* ====== 输入框 ====== */
.input {
  background: var(--input-bg);
  border: 1rpx solid var(--border-accent);
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
  color: var(--text);
}

.label {
  display: block;
  color: var(--text-sub);
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

/* ====== 危险色 ====== */
.danger { color: #f87171; }
