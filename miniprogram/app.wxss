page {
  background: #f5f7fb;
  color: #1f2937;
  font-size: 28rpx;
}

.container {
  padding: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 18rpx rgba(17, 24, 39, 0.06);
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.sub {
  color: #6b7280;
  font-size: 24rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chip {
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.chip.up {
  background: #fef2f2;
  color: #dc2626;
}

.chip.down {
  background: #ecfdf5;
  color: #059669;
}

.chip.flat {
  background: #f3f4f6;
  color: #6b7280;
}

.btn {
  background: #2563eb;
  color: #fff;
  border-radius: 12rpx;
  padding: 14rpx 18rpx;
  font-size: 26rpx;
  border: none;
}

.btn.ghost {
  background: #eef2ff;
  color: #1e40af;
}

.danger {
  color: #dc2626;
}
