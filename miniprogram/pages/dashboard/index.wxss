  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
  min-width: 0;
}

.ag-header-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.ai-trigger-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.35);
}

.ai-trigger-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.ai-btn-loading {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.35);
  pointer-events: none;
}

.ai-btn-done {
  background: linear-gradient(135deg, #10b981, #059669);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.35);
}

.ai-btn-pulse {
  position: absolute;
  inset: 0;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.2);
  animation: aiPulse 1.5s ease-in-out infinite;
}

.ai-btn-icon {
  font-size: 28rpx;
}

.ai-btn-label {
  font-size: 22rpx;
  white-space: nowrap;
}

@keyframes aiPulse {
  0%, 100% { opacity: 0; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.05); }
}

