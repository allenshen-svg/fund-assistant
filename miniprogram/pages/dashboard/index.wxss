  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* ====== AI Loading (内联占位) ====== */
.ai-loading-inline {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.ai-loading-dots {
  display: flex;
  gap: 12rpx;
}

.ai-ld {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #8b5cf6;
  animation: aiDotBounce 1.4s ease-in-out infinite;
}

.ai-ld2 { animation-delay: 0.2s; }
.ai-ld3 { animation-delay: 0.4s; }

@keyframes aiDotBounce {
  0%, 80%, 100% { transform: scale(0.6); opacity: 0.4; }
  40% { transform: scale(1); opacity: 1; }
}

/* ====== AI 浮动进度条 ====== */
.ai-float-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.95), rgba(139, 92, 246, 0.95));
  backdrop-filter: blur(10px);
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  overflow: hidden;
}

.ai-float-shimmer {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent);
  animation: aiShimmer 2s ease-in-out infinite;
}

@keyframes aiShimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

.ai-float-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
  position: relative;
  z-index: 1;
}

.ai-float-icon {
  font-size: 32rpx;
  animation: aiFloatBounce 1s ease-in-out infinite;
}

@keyframes aiFloatBounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4rpx); }
}

.ai-float-text {
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
}
