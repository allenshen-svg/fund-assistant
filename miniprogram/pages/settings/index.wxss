/* ====== 统计网格 ====== */
.stat-grid {
  display: flex;
  gap: 12rpx;
}

.stat-item {
  flex: 1;
  background: rgba(255,255,255,0.03);
  border-radius: 12rpx;
  padding: 16rpx 12rpx;
  text-align: center;
}

.stat-num {
  display: block;
  font-size: 32rpx;
  font-weight: 800;
  color: #e0e0e0;
  margin-bottom: 4rpx;
}

/* ====== 开关行 ====== */
.switch-row {
  padding: 10rpx 0;
}

.set-label {
  font-size: 28rpx;
  color: #e0e0e0;
}

/* ====== 按钮行 ====== */
.btn-row {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
  flex-wrap: wrap;
}

/* ====== 状态条 ====== */
.status-bar {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  background: rgba(108,138,255,0.08);
  color: #8b8fa3;
}

.status-bar.green {
  background: rgba(34,197,94,0.12);
  color: #4ade80;
}

.status-bar.orange {
  background: rgba(251,146,60,0.12);
  color: #fb923c;
}

/* ====== 设置条目 ====== */
.set-item {
  padding: 16rpx 0;
  border-top: 1rpx solid rgba(108,138,255,0.08);
}

.set-item:first-child {
  border-top: none;
}

/* ====== 检查清单 ====== */
.check-item {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
  padding: 10rpx 0;
}

.check-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

/* ====== AI 提示 ====== */
.ai-hint {
  margin-top: 16rpx;
  padding: 12rpx;
  background: rgba(108,138,255,0.06);
  border-radius: 8rpx;
}

.ai-hint .link {
  word-break: break-all;
}

/* ====== 关于 ====== */
.about-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}
