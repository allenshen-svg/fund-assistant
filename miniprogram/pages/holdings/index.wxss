/* ====== 持仓条目 ====== */
.h-item {
  border-top: 1rpx solid var(--border-subtle);
  padding: 16rpx 0;
}

.h-item:first-child {
  border-top: none;
}

.h-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.h-left {
  flex: 1;
}

.h-right {
  text-align: right;
}

.h-name {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text);
}

.h-pct {
  font-size: 30rpx;
  font-weight: 700;
}

.h-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 8rpx;
}

.del-btn {
  font-size: 24rpx;
  color: #f87171;
  padding: 4rpx 12rpx;
}

/* ====== 折叠标题 ====== */
.sec-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.toggle-arrow {
  font-size: 22rpx;
  color: var(--text-muted);
}

.sec-sub-header {
  padding: 0 24rpx 16rpx;
}

.loading-tip {
  text-align: center;
  padding: 40rpx 0;
  color: var(--text-muted);
  font-size: 26rpx;
}

/* ====== 波段组合 ====== */
.swing-card {
  background: var(--elevated);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid var(--text-muted);
}

.swing-card.swing-buy {
  border-left-color: #34d399;
  background: rgba(52,211,153,0.06);
}

.swing-card.swing-sell {
  border-left-color: #f87171;
  background: rgba(248,113,113,0.06);
}

.swing-card.swing-hold {
  border-left-color: #fbbf24;
  background: rgba(251,191,36,0.06);
}

.swing-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.swing-left {
  flex: 1;
}

.swing-name {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text);
  display: block;
}

.swing-badge {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.swing-badge-buy {
  background: rgba(52,211,153,0.2);
  color: #34d399;
}

.swing-badge-sell {
  background: rgba(248,113,113,0.2);
  color: #f87171;
}

.swing-badge-hold {
  background: rgba(251,191,36,0.2);
  color: #fbbf24;
}

.swing-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 12rpx;
}

.sg-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sg-label {
  font-size: 20rpx;
  color: var(--text-muted);
}

.sg-val {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
}

.swing-advice {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid var(--border-subtle);
}

.swing-nodata {
  padding: 20rpx 0;
  text-align: center;
}

/* ====== 预测追踪 ====== */
.pred-actions {
  display: flex;
  gap: 12rpx;
  padding: 12rpx 0 20rpx;
}

.pred-actions .btn {
  flex: 1;
}

.btn.small {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  min-height: auto;
}

/* 统计卡片 */
.pred-stats-card {
  background: var(--elevated);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.pred-stats-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 16rpx;
}

.ps-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ps-val {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text);
}

.ps-val.big {
  font-size: 36rpx;
}

.ps-label {
  font-size: 20rpx;
  color: var(--text-muted);
  margin-top: 4rpx;
}

/* 准确率进度条 */
.pred-bar-wrap {
  text-align: center;
}

.pred-bar {
  height: 12rpx;
  background: var(--accent-bg);
  border-radius: 6rpx;
  overflow: hidden;
}

.pred-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #6c8aff, #34d399);
  border-radius: 6rpx;
  transition: width 0.4s;
}

/* 最近验证 */
.pred-latest {
  background: var(--elevated);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.pred-latest-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.pred-acc-badge {
  font-size: 24rpx;
  font-weight: 700;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.pred-acc-badge.good {
  background: rgba(52,211,153,0.2);
  color: #34d399;
}

.pred-acc-badge.medium {
  background: rgba(251,191,36,0.2);
  color: #fbbf24;
}

.pred-acc-badge.poor {
  background: rgba(248,113,113,0.2);
  color: #f87171;
}

.pred-result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-top: 1rpx solid var(--border-faint);
}

.pred-result-item:first-child {
  border-top: none;
}

.pr-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.pr-icon {
  font-size: 28rpx;
}

.pr-name {
  font-size: 24rpx;
  color: var(--text);
}

.pr-right {
  text-align: right;
}

.pr-pred {
  font-size: 22rpx;
  color: var(--text-muted);
  display: block;
}

.pr-actual {
  font-size: 24rpx;
  font-weight: 600;
}

/* 历史快照 */
.pred-history {
  margin-top: 16rpx;
}

.sub-title {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-label);
  display: block;
  margin-bottom: 12rpx;
}

.ph-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-top: 1rpx solid var(--border-faint);
}

.ph-item:first-child {
  border-top: none;
}

.ph-left {
  display: flex;
  flex-direction: column;
}

.ph-date {
  font-size: 26rpx;
  color: var(--text);
  font-weight: 600;
}

.ph-acc {
  font-size: 24rpx;
  font-weight: 600;
}

.ph-acc.verified {
  color: #34d399;
}

.ph-acc.pending {
  color: var(--text-muted);
}

/* ====== 操作按钮 ====== */
.action-btns {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.action-btns .btn {
  flex: 1;
  min-width: 200rpx;
}

/* ====== 弹窗遮罩 ====== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.55);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-panel {
  width: 100%;
  max-height: 80vh;
  background: var(--card-bg, #1e1e2e);
  border-radius: 24rpx;
  padding: 32rpx;
  overflow-y: auto;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.4);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.modal-close {
  font-size: 36rpx;
  color: var(--text-muted);
  padding: 8rpx 16rpx;
}

/* ====== 表单 ====== */
.form-item {
  margin-bottom: 16rpx;
}

.picker-val {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* ====== 搜索区域 ====== */
.search-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 32rpx !important;
  letter-spacing: 4rpx;
}

.search-btn {
  flex-shrink: 0;
  min-width: 160rpx;
  font-size: 26rpx !important;
  padding: 0 20rpx !important;
  height: 72rpx;
  line-height: 72rpx;
}

/* ====== 搜索结果 ====== */
.search-result {
  background: var(--elevated);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid #34d399;
}

.sr-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-bottom: 16rpx;
}

.sr-name {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
}

.sr-pct {
  font-size: 26rpx;
  font-weight: 600;
  margin-top: 4rpx;
}

.sr-add-btn {
  width: 100%;
  background: #34d399 !important;
  color: #000 !important;
  font-weight: 700;
}

/* ====== 搜索错误 ====== */
.search-error {
  padding: 16rpx 20rpx;
  background: rgba(248,113,113,0.1);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  text-align: center;
}

.search-error .sub {
  color: #f87171;
}

/* ====== 手动输入分割线 ====== */
.manual-divider {
  text-align: center;
  padding: 16rpx 0;
}

.manual-section {
  border-top: 1rpx solid var(--border-subtle);
  padding-top: 8rpx;
}


