.form-item {
  margin-bottom: 14rpx;
}

.label {
  display: block;
  color: #64748b;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.input {
  background: #f8fafc;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
}

.holding-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #edf2f7;
  padding: 16rpx 0;
}

.holding-item:first-child {
  border-top: 0;
  padding-top: 8rpx;
}

.h-name {
  font-size: 28rpx;
  font-weight: 700;
}
