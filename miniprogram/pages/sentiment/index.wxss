/* ====== 热力图 ====== */
.heat-list {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.heat-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.heat-info {
  width: 140rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.heat-tag {
  font-size: 24rpx;
  color: #e0e0e0;
  font-weight: 600;
}

.heat-trend {
  font-size: 22rpx;
}

.heat-bar-wrap {
  flex: 1;
  height: 18rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 10rpx;
  overflow: hidden;
}

.heat-bar {
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.5s ease;
}

.heat-bar.hot {
  background: linear-gradient(90deg, #ef4444, #f87171);
}

.heat-bar.warm {
  background: linear-gradient(90deg, #fb923c, #fbbf24);
}

.heat-bar.cool {
  background: linear-gradient(90deg, #22c55e, #4ade80);
}

.heat-temp {
  width: 70rpx;
  text-align: right;
  font-size: 24rpx;
  font-weight: 700;
  color: #e0e0e0;
}

/* ====== 展望 ====== */
.outlook-text {
  font-size: 26rpx;
  color: #b0b4c8;
  line-height: 1.7;
}

/* ====== 筛选条 ====== */
.filter-scroll {
  display: flex;
  white-space: nowrap;
  margin-bottom: 20rpx;
  padding: 0 4rpx;
}

.filter-chip {
  display: inline-block;
  padding: 10rpx 22rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #8b8fa3;
  background: rgba(255,255,255,0.05);
  margin-right: 12rpx;
  border: 1rpx solid transparent;
}

.filter-chip.active {
  color: #6c8aff;
  background: rgba(108,138,255,0.12);
  border-color: rgba(108,138,255,0.3);
}

/* ====== 事件条目 ====== */
.evt-item {
  border-top: 1rpx solid rgba(108,138,255,0.08);
  padding: 18rpx 0;
}

.evt-item:first-child {
  border-top: none;
}

.evt-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #e0e0e0;
  max-width: 520rpx;
  flex: 1;
}

.evt-meta {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.evt-sectors {
  margin-top: 6rpx;
}
